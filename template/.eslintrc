{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [<% if (airbnb) { %>
    "airbnb",<% } %>
    "prettier"
  ],
  "plugins": [
    "prettier",
    "import"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": [
          "test/**",
          "packages/**/test/**",
          "packages/**/*.test.js"
        ],
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
  }
}